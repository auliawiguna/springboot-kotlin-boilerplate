{{> /../backend/header}}
    <!-- Page wrapper  -->
    <div class="page-wrapper" id="profile-page">
        {{> /../backend/breadcrumb}}        
        <!-- Container fluid  -->
        <div class="container-fluid">
            <!-- Start Page Content -->
            <div class="row bg-white m-l-0 m-r-0 box-shadow ">

                <!-- column -->
                <div class="col-lg-12">
                    <h1>{{title}}</h1>
                    <div class="card p-1">
                        <div class="card-body">
                            <div class="table-responsive mb-4">
                                <table class="table table-sm table-hover table-bordered">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Title</th>
                                            <th>Content</th>
                                            <th>Author</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#articles}}
                                        <tr>
                                            <td><a href="{{{base_url}}}/admin/article/{{id}}">{{id}}</a></td>
                                            <td><a href="{{{base_url}}}/admin/article/{{id}}">{{title}}</a></td>
                                            <td>{{content}}</td>
                                            <td>{{author.userNicename}}</td>
                                        </tr>        
                                        {{/articles}}    
                                    </tbody>
                                </table>                            
                            </div>
                            <nav aria-label="Page navigation example">
                                <ul class="pagination">
                                    {{#prevPage}}
                                    <li class="page-item"><a class="page-link" href="{{base_url}}/admin/article?page={{prevPageNum}}">Previous</a></li>
                                    {{/prevPage}}
                                    {{#arrayOfPage}}
                                    <li class="page-item"><a class="page-link" href="{{base_url}}/admin/article?page={{.}}">{{.}}</a></li>
                                    {{/arrayOfPage}}
                                    {{#nextPage}}
                                    <li class="page-item"><a class="page-link" href="{{base_url}}/admin/article?page={{nextPageNum}}">Next</a></li>
                                    {{/nextPage}}
                                </ul>
                            </nav>                            
                        </div>
                    </div>
                </div>
                <!-- column -->
            </div>
            <!-- End PAge Content -->
        </div>
        <!-- End Container fluid  -->
        <!-- footer -->
        {{> /../backend/footer}}
        <!-- End footer -->
    </div>
    <!-- End Page wrapper  -->
{{> /../backend/jsload}}